<section class="text-center pt-3 row row-cols-3 pb-2"> 
  <div class='d-flex flex-column flex-sm-row justify-content-sm-start justify-content-end align-items-start align-items-sm-end gap-2'>
    <%= link_to 'Home', root_path, class:'btn btn-info' %>
    <%= link_to 'New Post', new_post_path, class:'btn btn-primary' %>
  </div>
  <div class='d-flex flex-column justify-content-center'>
    <h1><a href='/'>Blog</a></h1>
    <p class='mb-0'>This App is built on RAILS</p>
  </div>
  <div class='d-flex flex-column flex-sm-row justify-content-end align-items-end gap-2'>
  <%= link_to 'API', rswag_ui_path, class:'btn btn-dark' %>
  <div class="d-flex gap-2 flex-column flex-sm-row">
    <% if user_signed_in? %>
      <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: "btn btn-success" %>
      <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-warning" %>
    <% end %>
  </div>  
  </div>

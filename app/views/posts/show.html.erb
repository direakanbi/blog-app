<div class="user_container">
  <section class="post_show_cont">
  <article class="post_show">
    <div class="post_show_field">
      <h4 class="post_show_title"> <%= @post.title %> by <%= @user.name %> </h4>

      <p class="span_field"> Comments : <%= @post.comments.size %> Likes : <%= @post.likes.size %> </p>
    </div>

    <div>
      <p> <%= @post.text %> </p>
    </div>
  </article>

  <article class="span_comment_field">
    <div>
      <% @post.five_most_recent_comments.each do |comment| %>
      <div>
        <li> <%= comment.users.name %>: <%= comment.text %> </li>
      </div>
      <% end %>
    </div>
  </article>

  <article class="like_cont">
    <div>
      <%= form_with url: "#{@post.id}/likes" do |form| %>
        <button type="submit" class="post_like_btn"> ğŸ‘ </button>
      <% end %>
    </div>

    <div>
      <%= form_with url: "#{@post.id}/likes" do |form| %>
        <button type="submit" class="post_like_btn"> ğŸ‘ </button>
      <% end %>
    </div>
  </article>

  <div class="comment_field">
    <%= form_with url: "#{@post.id}/comments", scope: :comment do |form| %>
      <div class="">
        <%= form.text_area :text, placeholder: "Type something here...", class: 'comment_create_field', row: 14, required: true %>
      </div>

      <div>
        <button type="submit" class="comment_btn"> Comment </button>
      </div>
    <% end %>
  </div>
  </section>
</div>
